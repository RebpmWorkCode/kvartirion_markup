{{ form.create('FeedbackMessage', {
    'url': {'plugin': 'feedback', 'controller': 'feedback', 'action': 'send', '0': 'order_call'},
    'id': 'FeedbackMessageSendFormOrderCall',
    'data-ajax-send-form': true,
    'inputDefaults': {'div': false, 'label': false}
}) }}
    {% set flash = _view.loadHelper('Flash') %}
    {{ flash.render() }}
    <p class="form-desc">Введите контактные данные<br>и наш менеджер свяжется с вами<br>в ближайшее время</p>
    {{ form.input('name', {
        'placeholder': 'Ваше имя',
        'id': 'FeedbackMessageNameOrderCall',
        'class': 'ui-input cleared-value',
        'type': 'text'
    }) }}
    {{ form.input('phone', {
        'placeholder': 'Ваш номер телефона',
        'id': 'FeedbackMessagePhoneOrderCall',
        'class': 'ui-input cleared-value phone-mask',
        'type': 'tel'
    }) }}
    <label class="ui-checkbox">
        {{ form.checkbox('confirmation', {
            'checked': true,
            'id': 'FeedbackMessageConfirmationOrderCall',
            'hidden': true,
            'hiddenField': false,
            'value': 1
        }) }}
        <span class="ui-checkbox__icon"><span class="icon-check_dark"></span></span>
        <span class="ui-checkbox__text">
            заполняя данную форму, <br>вы даете <a href="#popup-policy" data-fancybox>согласие на обработку ваших данных</a>
        </span>
    </label>
    <div class="popup-callback__bottom">
        <div class="row flex-md-row-reverse">
            <div class="col-md-6">
                {% if recaptcha.hasKey() %}
                    {{ recaptcha.display_form({'id': 'order_call', 'div': 'recaptcha-block'}) }}
                {% endif %}
            </div>
            <div class="col-md-6">
                {{ form.button('Отправить', {'class': 'btn btn-default', 'type': 'submit'}) }}
            </div>
        </div>
    </div>
{{ form.end() }}
