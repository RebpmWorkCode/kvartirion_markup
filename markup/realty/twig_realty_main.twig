<div class="section-about">
    <div class="container">
        <div class="row informers">
            <div class="col-12 col-md-6 col-xl-4 informers__item">
                <div class="informers__value">100+</div>
                <div>Профессионалов в штате</div>
            </div>
            <div class="col-12 col-md-6 col-xl-4 informers__item">
                <div class="informers__value">500+ </div>
                <div>Клиентов каждый месяц </div>
            </div>
            <div class="col-12 col-md-6 col-xl-4 informers__item">
                <div class="informers__value">#1</div>
                <div>Крупнейшая база недвижимости  в Калуге</div>
            </div>
        </div>
        <div class="about-team row">
            <div class="col col-md-6 col-lg-4 about-team__info">
                <div class="heading-team">Наша<br>команда</div>
                <div class="about-team__personal">
                    {% for user in usersForSite %}
                        <div>
                            <div class="about-team__name">
                                <strong>{{ user.User.username }}</strong>
                            </div>
                            <div class="about-team__post">{{ user.Role.title }}</div>
                            <div class="about-team__contact">
                                <a href="tel:{{ user.User.phone }}">{{ user.User.phone }}</a>
                            </div>
                            <div class="about-team__contact">
                                <a href="mailto:{{ user.User.email }}">{{ user.User.email }}</a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <div>
                    <a class="btn btn-default btn-default--white" href="/users">Познакомиться со всеми</a>
                </div>
            </div>
            <div class="col col-md-6 col-lg-8 about-team__gallery">
                <div class="team-slider">
                    {% set countUsers = usersForSite|length %}
                    {% if countUsers < 4 %}
                        {% set count = 4/countUsers %}
                        {% for range in 0..count|round %}
                            {% for user in usersForSite %}
                                <div class="team-slider__item">
                                    <div class="team-slider__item-inner">
                                        <img data-src="/{{ user.User.image }}" alt="">
                                    </div>
                                </div>
                            {% endfor %}
                        {% endfor %}
                    {% else %}
                        {% for user in usersForSite %}
                            <div class="team-slider__item">
                                <div class="team-slider__item-inner">
                                    <img data-src="/{{ user.User.image }}" alt="">
                                </div>
                            </div>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
<div class="section-best">
    <div class="container">
        <div class="cards js-tabs-content">
            <div class="cards__top-row row">
                <div class="heading-base text-center">Лучшие объявления</div><br>

                <ul class="cards__tabs">
                    {% for category in categoriesAll %}
                        <li class="current">
                            <a class="js-link-tab" href='#section-best' data-category="{{ category['Category']['alias']}}">{{ category['Category']['title'] }}</a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
            <div class="tab-item current" id="tabs">
                <div class="row">
                    {{ adView.setDefaults({default_picture: config.Site.no_photo_image}) }}
                    {% for item in hotOffers %}
                        <div class="col-12 col-md-6 col-xl-4 realty-object" data-category="{{ item.Category.alias }}">
                            <div class="cards__item">
                                <div class="cards__item-section">
                                    {% set offerItem = adView.getInfo(item) %}
                                    <div class="catalog__item-buttons">
                                        {% set favoriteActiveClass = '' %}
                                        {% set favoriteAction = 'add' %}
                                        {% if favorite.has('Advertisement', item.Advertisement.id) %}
                                            {% set favoriteActiveClass = 'active' %}
                                            {% set favoriteAction = 'remove' %}
                                        {% endif %}
                                        {{ html.link(html.tag('span', '', {'class': 'icon-heart_white'}), '#', {
                                            'class': 'favorites-action btn btn-card btn-card--large' ~ favoriteActiveClass,
                                            'escape': false,
                                            'data-model': 'Advertisement',
                                            'data-id': item.Advertisement.id,
                                            'data-action': favoriteAction
                                        }) }}

                                    </div>

                                    <div class="cards__item-gallery">
                                        {% set galleryList = adView.getGallery(item)['items'] %}
                                        {% set galleryList = imageResized.resizePicture(galleryList, {'width': '325', 'height': '275', 'mode': 'fit', 'paddings': false, 'folder': 'twig_fit_realty_list'}) %}
                                        {% for galleryItem in galleryList %}
                                            <div><img src="{{ galleryItem.src }}" alt="{{ galleryItem.description }}"></div>
                                        {% endfor %}
                                    </div>

                                    <div class="cards__item-desc">
                                        <div class="row">
                                            <div class="col col-12 col-md-6">
                                                <div class="cards__item-info">
                                                    <strong class="content_block" title="{{ adSeo.pattern_title(item)|e }}">{{ adSeo.pattern_title(item)|e }}</strong>
                                                </div>
                                            </div>
                                            {% set paramsValues = item.CategoryParamValues ?? [] %}
                                            {% set floor = complexCategory.getViewAliasesOptions('floor', paramsValues) %}
                                            {% set floors = complexCategory.getViewAliasesOptions('floors', paramsValues) %}
                                            {% set roomsNum = complexCategory.getViewAliasesOptions('rooms_num', paramsValues) %}
                                            {% set area = complexCategory.getViewAliasesOptions('area', paramsValues) %}
                                            <div class="col col-12 col-md-6">
                                                <div class="price"><span class="price__main">{{ price.format(item.Advertisement.price) }}</span><span class="price__currency">₽</span></div>
                                            </div>
                                        </div>
                                        <div class="cards__item-info row">
                                            <div class="col col-12 col-md-6">{{ item.Advertisement.location_full|e }}</div>
                                            <div class="col col-12 col-md-6 price"><span class="price__main">{{ price.format(item.Advertisement.price_area) }} </span><span class="price__currency">₽</span><span class="price__footage"> м²</span></div>
                                        </div>
                                    </div>
                                </div>

                                <div class="cards__item-details card-informers">
                                    <div class="card-informers__item"><span class="icon-stages_white card-informers__item-icon"></span><span>Этаж
																	<strong>{{ floor }}/{{ floors }}</strong></span></div>
                                    <div class="card-informers__item"><span class="icon-bed_white card-informers__item-icon"></span><span>
																	<strong>{{ roomsNum }}</strong> комнаты</span></div>
                                    <div class="card-informers__item"><span class="icon-house_white card-informers__item-icon"></span><span>
																	<strong>{{ area }}</strong>м²</span></div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="text-center">
                <a class="btn btn-default" href="agency/realty">Открыть каталог</a>
            </div>
        </div>
    </div>
</div>
